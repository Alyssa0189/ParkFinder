<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  
  <servlet>
    <servlet-name>dataVancouverService</servlet-name>
    <servlet-class>cs310.creativeteamname.server.DataVancouverServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>dataVancouverService</servlet-name>
    <url-pattern>/parkfinder/data</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>commentService</servlet-name>
    <servlet-class>cs310.creativeteamname.server.CommentServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>commentService</servlet-name>
    <url-pattern>/parkfinder/comment</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>facebookService</servlet-name>
    <servlet-class>cs310.creativeteamname.server.FacebookServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>facebookService</servlet-name>
    <url-pattern>/parkfinder/facebook</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>googleMapService</servlet-name>
    <servlet-class>cs310.creativeteamname.server.GoogleMapServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>googleMapService</servlet-name>
    <url-pattern>/parkfinder/map</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>locationService</servlet-name>
    <servlet-class>cs310.creativeteamname.server.LocationServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>locationService</servlet-name>
    <url-pattern>/parkfinder/location</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>loginService</servlet-name>
    <servlet-class>cs310.creativeteamname.server.LoginServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>loginService</servlet-name>
    <url-pattern>/parkfinder/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>ratingService</servlet-name>
    <servlet-class>cs310.creativeteamname.server.RatingServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>ratingService</servlet-name>
    <url-pattern>/parkfinder/rating</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>ParkFinder.html</welcome-file>
  </welcome-file-list>

<!--  required work around to avoid java.net.socketException "Permission denied" when accessing from data.vancouver -->
<!--  https://code.google.com/p/googleappengine/issues/detail?id=8166 -->
<!--  remove this filter when uploading - this only works in development environments -->
  <filter>
    <filter-name>_ah_DevSocketFilter</filter-name>
    <filter-class>
      com.google.appengine.api.socket.dev.DevSocketFilter
    </filter-class>
    <init-param>
      <param-name>use-native-sockets</param-name>
      <param-value>true</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>_ah_DevSocketFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  
</web-app>
